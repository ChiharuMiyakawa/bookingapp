<h1 class="m-4">設定</h1>
<div class ="UserContainer m-4">
  <div class="row">
    <div class ="sidecontainer col-4">
      <div class="list-group">
        <a href="/users/account" class="list-group-item list-group-item-action">
          アカウント
        </a>
        <a href="/users/profile" class="list-group-item list-group-item-action active" aria-current="true">プロフィール</a>
      </div>
    </div>
    <div class ="MenuContainer col-8">
      <div class ="d-flex border-bottom align-items-end justify-content-between">
        <h1>プロフィール</h1>
      </div>
      <%= form_with model: @user, url: user_profile_path do |f| %>
        <%= f.hidden_field :id %>
        <div class = "d-flex align-items-center mb-3">
          <%= f.label :avatar, class: "m-2 fs-5 w-25" %>
          <%= f.file_field :avatar %>
        </div>
        <div class = "d-flex align-items-center mb-3">
          <%= f.label :username, class: "m-2 fs-5 w-25" %>
          <div class = "d-flex flex-column mx-5 w-100">
            <% if @user.errors.any? %>
              <% @user.errors.full_messages_for(:username).each do |message| %>
                <ul class="m-0 p-0">
                  <li class = "error_text text-danger list-unstyled"><%= message %></li>
                </ul>
              <% end %>
            <% end %>
            <%= f.text_field :username, autofocus: true, autocomplete: "name", class:"w-100", placeholder: "ユーザー名を入力" %>
          </div>
        </div>
        <div class = "d-flex mb-3">
          <%= f.label :userprofile, class: "m-2 fs-5 w-25" %>
          <%= f.text_area :userprofile, autofocus: true, autocomplete: "profile", class:"mx-5 w-100", placeholder: "自己紹介を入力" %>
        </div>
        <div class="actions d-flex justify-content-end">
          <%= f.submit "保存", class:"btn btn-info w-25" %>
          <%= link_to "キャンセル", :users_profile, class:"btn btn-secondary mx-4 w-25" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
