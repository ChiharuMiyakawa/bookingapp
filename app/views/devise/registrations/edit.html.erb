<h1 class="m-4">設定</h1>
<div class ="UserContainer m-4">
  <div class="row">
    <div class ="sidecontainer col-4">
      <div class="list-group">
        <a href="/users/account" class="list-group-item list-group-item-action">
          アカウント
        </a>
        <a href="/users/profile" class="list-group-item list-group-item-action active" aria-current="true">プロフィール</a>
      </div>
    </div>
    <div class ="MenuContainer col-8">
      <div class ="d-flex border-bottom align-items-end justify-content-between">
        <h1>アカウント</h1>
      </div>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= f.hidden_field :id %>
        <div class = "d-flex align-items-center my-3">
          <%= f.label :email, class: "m-2 fs-5 w-50" %>
          <div class = "d-flex flex-column mx-5 w-100">
            <% if @user.errors.any? %>
              <% @user.errors.full_messages_for(:email).each do |message| %>
                <ul class="m-0 p-0">
                  <li class = "error_text text-danger list-unstyled"><%= message %></li>
                </ul>
              <% end %>
            <% end %>
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"w-100", placeholder: "メールアドレスを入力" %>
          </div>
        </div>
        <div class = "d-flex align-items-center mb-3">
          <%= f.label :"変更後パスワード", class: "m-2 w-50" do %>
            <%= f.label :"変更後パスワード", class: "fs-5" %>
            <p>※変更する場合のみ</p>
          <% end %>
          <div class = "d-flex flex-column mx-5 w-100">
            <% if @user.errors.any? %>
              <% @user.errors.full_messages_for(:password).each do |message| %>
                <ul class="m-0 p-0">
                  <li class = "error_text text-danger list-unstyled"><%= message %></li>
                </ul>
              <% end %>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"w-100", placeholder: "変更後パスワードを入力" %>
          </div>
        </div>
        <div class = "d-flex align-items-center mb-3">
          <%= f.label :"確認用パスワード", class: "m-2 w-50" do %>
            <%= f.label :"確認用パスワード", class: "fs-5" %>
            <p>※変更する場合のみ</p>
          <% end %>
          <div class = "d-flex flex-column mx-5 w-100">
            <% if @user.errors.any? %>
              <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                <ul class="m-0 p-0">
                  <li class = "error_text text-danger list-unstyled"><%= message %></li>
                </ul>
              <% end %>
            <% end %>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class:"w-100", placeholder: "変更後パスワードを入力" %>
          </div>
        </div>
        <div class = "d-flex align-items-center mb-3">
          <%= f.label "現在のパスワード", class: "m-2 fs-5 w-50" %>
          <div class = "d-flex flex-column mx-5 w-100">
            <% if @user.errors.any? %>
              <% @user.errors.full_messages_for(:current_password).each do |message| %>
                <ul class="m-0 p-0">
                  <li class = "error_text text-danger list-unstyled"><%= message %></li>
                </ul>
              <% end %>
            <% end %>
            <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class:"w-100", placeholder: "現在のパスワードを入力" %>
          </div>
        </div>
        <div class="actions d-flex justify-content-end">
          <%= f.submit "保存", class:"btn btn-info w-25" %>
          <%= link_to "キャンセル", :users_account, class:"btn btn-secondary mx-4 w-25" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
