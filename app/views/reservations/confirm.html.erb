<div class="FormWrapper center-block">
  <div class="RoomContainer d-flex flex-column mx-auto rounded border p-4" style="width: 480px;">
    <h2 class="mt-2 mb-2 text-center">予約内容の確認</h2>
    <div class="field mb-2 d-flex  justify-content-between">
      <label class="m-2 fs-5"><%= Reservation.human_attribute_name(:reservation_start_date) %></label>
      <p class="m-2 fs-5"><%= @reservation.reservation_start_date.strftime("%Y/%m/%d") %></p>
    </div>
    <div class="field mb-2 d-flex  justify-content-between">
      <label class="m-2 fs-5"><%= Reservation.human_attribute_name(:reservation_end_date) %></label>
      <p class="m-2 fs-5"><%= @reservation.reservation_end_date.strftime("%Y/%m/%d") %></p>
    </div>
    <div class="field mb-2 d-flex  justify-content-between">
      <label class="m-2 fs-5">日数</label>
      <p class="m-2 fs-5"><%= @days %>日</p>
    </div>
    <div class="field mb-2 d-flex  justify-content-between">
      <label class="m-2 fs-5"><%= Reservation.human_attribute_name(:person_num) %></label>
      <p class="m-2 fs-5"><%= @reservation.person_num %>人</p>
    </div>
    <div class="field mb-2 d-flex  justify-content-between">
      <label class="m-2 fs-5"><%= Reservation.human_attribute_name(:total_price) %></label>
      <p class="m-2 fs-5">¥<%= number_with_delimiter(@reservation.total_price) %></p>
    </div>
    <div class="actions mb-2">
      <% if @reservation.new_record? %>
        <%= button_to "予約を確定", reservations_path,  params: { reservation: @reservation.attributes }, method: :post, class:"btn btn-info w-100" %>
      <% else %>
        <%= button_to "再予約を確定", reservation_path(@reservation),  params: { reservation: @reservation.attributes }, method: :patch, class:"btn btn-info w-100" %>
      <% end %>
      <button type="button" class="btn btn-secondary w-100 mt-2"><%= link_to "キャンセル", :back ,class: "text-decoration-none text-muted" %></button>
    </div>
  </div>
</div>